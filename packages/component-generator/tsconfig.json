{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "types": ["@kudra/nuxt"]
  },
  "include": ["src/**/*"]
}
