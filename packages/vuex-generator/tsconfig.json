{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "types": ["@kudra/nuxt", "@types/jest", "@types/node"]
  },
  "exclude": ["node_modules", "**/templates/**/*"],
  "include": ["src/**/*"]
}
